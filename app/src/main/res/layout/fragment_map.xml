<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabActivity.TabActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/heatMapToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/baseMargin"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_menu_view" />

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_cameraZoom="11">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/baseMargin"
            mapbox:srcCompat="@android:drawable/ic_menu_mylocation"
            android:focusable="true" />
    </com.mapbox.mapboxsdk.maps.MapView>

    <ProgressBar
        android:id="@+id/heapMapLoadingSpinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        />

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
        android:id="@+id/history_rfal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:rfal_frame_color="#ffffff"
        mapbox:rfal_frame_alpha="0.7"
        >

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            android:id="@+id/history_rfab"
            android:layout_width="30dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            mapbox:rfab_color_normal="#00cdbc"
            mapbox:rfab_color_pressed="#56d3c9"
            mapbox:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            mapbox:rfab_shadow_color="#999999"
            mapbox:rfab_shadow_dx="0dp"
            mapbox:rfab_shadow_dy="0dp"
            mapbox:rfab_shadow_radius="1dp"
            mapbox:rfab_size="normal" />
    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>